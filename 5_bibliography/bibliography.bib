@article{askarieh_radial_2024,
	title = {Radial increment dynamics of {Maritime} pine (\textit{{Pinus} pinaster} {Ait}.) in pure and mixed stands with {Scots} pine (\textit{{Pinus} sylvestris} {L}.) under changing environmental conditions},
